<h1 class="text-center m-4">Articles</h1>
<% if !@articles.empty? %>
<div class="flickr_pagination d-flex justify-content-center  m-4">
    <%= will_paginate @articles %>
  </div>


<div class="container d-flex  justify-content-center flex-wrap ">
    <% @articles.each do |f| %>
      <%= render "layouts/card_article", article: f %>    
    <% end %>
  <% else %>
<div class="container text-center">
  <h3> Currently we dont have articles, please write the first !</h3>

        <% if logged_in? %>
          <%= link_to "New Article", new_article_path, class:  "btn btn-primary m-4" %>
        <% else %>
          <%= link_to "Sign-up", signup_path, class: "btn btn-primary m-4" %>
        <%end%>
</div>
<% end %>
</div>

